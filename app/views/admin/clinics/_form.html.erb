<div class="grid grid-cols-2 gap-8 grid-row-4">
  <div class="items-center">
    <%= f.label I18n.t('clinic.profile'), class: "block text-sm 2xl:text-lg font-medium text-gray-700 mb-2" %>
    <div data-controller="profile-preview">
      <div id="profile-container" class="relative mx-auto w-44 h-44 <%= @current_clinic.logo.attached? ? '' : 'hidden' %>" data-profile-preview-target="container">
        <img src="<%= @current_clinic.logo.attached? ? url_for(@current_clinic.logo) : '' %>" 
                alt="Profile Picture" 
                id="profile-preview"
                class="object-cover border border-gray-300 rounded-md shadow-sm w-44 h-44"
                data-profile-preview-target="preview"
                >
        <label id="profile-icon" for="profile-upload" class="absolute p-2 bg-white rounded-full shadow-md cursor-pointer bottom-1 right-1 <%= @current_clinic.logo.attached? ? '' : 'hidden' %>" data-profile-preview-target="icon">
          <%= render "admin/shared/svg", name: 'camera' %>
        </label>
      </div>
      <div id="handler" class="flex-col items-center w-full p-4 border-2 border-gray-300 border-dashed rounded-md bg-gray-50 <%= @current_clinic.logo.attached? ? 'hidden' : 'flex' %>" data-profile-preview-target="handler">
        <div class="text-center">
          <%= render "admin/shared/svg", name: 'upload' %>
          <p class="mt-1 text-sm text-gray-600 2xl:text-lg">
            Drag and drop an image, or click to select
          </p>
          <p class="text-xs text-gray-500">
            JPG, PNG up to 10MB
          </p>
        </div>
        <label for="profile-upload" class="px-4 py-2 mt-2 text-sm font-medium text-white rounded-md shadow-sm cursor-pointer 2xl:text-lg bg-primary hover:bg-secondary">
          Choose File
        </label>
        <span id="file-name" class="mt-2 text-sm text-gray-500 2xl:text-lg"></span>
      </div>
      <%= f.file_field :logo, class: "hidden", id: "profile-upload", data: { action: "change->profile-preview#previewImage", profile_preview_target: "input" } %>
    </div>
  </div>
  <div class="w-full ">
    <%= f.label :description, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 4, class: "mt-1 block h-48 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <div class="w-full">
    <%= f.label :name, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <!-- Address Field -->
  <div class="w-full">
    <%= f.label :address, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.text_field :address, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <!-- Phone Field -->
  <div class="w-full">
    <%= f.label :phone, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.text_field :phone, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <!-- Email Field -->
  <div class="w-full">
    <%= f.label :email, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.email_field :email, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <!-- Website Field -->
  <div class="w-full">
    <%= f.label :website, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.text_field :website, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <!-- Status Field -->
  <div class="w-full">
    <%= f.label :status, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.select :status, Clinic.statuses.keys.map { |key| [key.humanize, key] }, { include_blank: "Select Status" }, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <!-- Submit Button -->
  <div class="w-full col-span-2">
    <%= f.submit "Update Clinic", class: "w-full bg-primary text-white font-semibold text-sm 2xl:text-lg py-2 px-4 rounded-lg hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"%>
  </div>
</div>