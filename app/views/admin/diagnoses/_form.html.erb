<div>
  <div class="grid grid-cols-2 gap-8 mb-8">
    <div class="">
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 2xl:text-lg" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50 2xl:text-lg", required: true %>
      <% if @diagnosis.errors[:name].any? %>
        <p class="mt-2 text-sm text-red-600" id="name-error"><%= @diagnosis.errors[:name].join(', ') %></p>
      <% end %>
    </div>
    <div class="">
      <%= f.label :status, class: "block text-sm font-medium text-gray-700 2xl:text-lg" %>
      <% if @diagnosis.errors[:status].any? %>
        <p class="mt-2 text-sm text-red-600" id="status-error"><%= @diagnosis.errors[:status].join(', ') %></p>
      <% end %>
      <%= f.select :status, options_for_select(Diagnosis.statuses.keys.map { |status| [status.humanize, status] }, @diagnosis.status), {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50 2xl:text-lg" %>
    </div>
  </div>
  <div class="grid grid-cols-1 gap-8 mb-8">
    <div class="">
      <%= f.label :code, class: "block text-sm font-medium text-gray-700 2xl:text-lg" %>
      <%= f.text_field :code, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50 2xl:text-lg" %>
      <% if @diagnosis.errors[:code].any? %>
        <p class="mt-2 text-sm text-red-600" id="code-error"><%= @diagnosis.errors[:code].join(', ') %></p>
      <% end %>
    </div>
  </div>
  <div class="mb-4">
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 2xl:text-lg" %>
    <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50 2xl:text-lg" %>
    <% if @diagnosis.errors[:description].any? %>
      <p class="mt-2 text-sm text-red-600" id="description-error"><%= @diagnosis.errors[:description].join(', ') %></p>
    <% end %>
  </div>
</div> 