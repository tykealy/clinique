
  <input type="hidden" name="health_record[patient_id]" value="<%= @patient.id %>">

  <label for="new-condition" class="sr-only">Condition</label>
  <input id="new-condition" name="health_record[health_condition_name]" type="text"
     class="block w-full col-span-5 mt-1 border-gray-300 rounded-md shadow-sm focus:border-gray-300 focus:ring-primary disabled:opacity-50"
    placeholder="Enter condition name"
    required />

  <label for="new-value" class="sr-only">Value</label>
  <input id="new-value" name="health_record[value]" type="text"
    class="block w-full col-span-5 mt-1 border-gray-300 rounded-md shadow-sm focus:border-gray-300 focus:ring-primary disabled:opacity-50"
    placeholder="Enter value"
    required />

<div class="flex justify-end col-span-2 gap-4 mt-1 text-center md:mr-4">
  <button type="submit" class="flex items-center justify-center gap-2 px-1 text-white rounded-md md:px-4 hover:bg-secondary bg-primary">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
      <path d="M12 5v14" />
      <path d="M5 12h14" />
    </svg>
    <span class="leading-none">Add</span>
  </button>
</div>
