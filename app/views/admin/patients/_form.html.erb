<div class="grid grid-cols-2 gap-8 grid-row-4">
  <div class="items-center">
    <%= f.label I18n.t('patient.profile'), class: "block text-sm 2xl:text-lg font-medium text-gray-700 mb-2" %>
    <div data-controller="profile-preview">
      <div id="profile-container" class="relative mx-auto w-44 h-44 <%= @patient.profile.attached? ? '' : 'hidden' %>" data-profile-preview-target="container">
        <img src="<%= @patient.profile.attached? ? url_for(@patient.profile) : '' %>" 
         alt="Profile Picture" 
         id="profile-preview"
         class="object-cover border border-gray-300 rounded-md shadow-sm w-44 h-44"
         data-profile-preview-target="preview">
        <label id="profile-icon" for="profile-upload" class="absolute p-2 bg-white rounded-full shadow-md cursor-pointer bottom-1 right-1 <%= @patient.profile.attached? ? '' : 'hidden' %>" data-profile-preview-target="icon">
          <%= render "admin/shared/svg", name: 'camera' %>
        </label>
      </div>
      <div id="handler" class="flex-col items-center w-full p-4 border-2 border-gray-300 border-dashed rounded-md bg-gray-50 <%= @patient.profile.attached? ? 'hidden' : 'flex' %>" data-profile-preview-target="handler">
        <div class="text-center">
          <%= render "admin/shared/svg", name: 'upload' %>
          <p class="mt-1 text-sm text-gray-600 2xl:text-lg">
            Drag and drop an image, or click to select
          </p>
          <p class="text-xs text-gray-500 2xl:mt-3 2xl:text-sm">
            JPG, PNG up to 10MB
          </p>
        </div>
        <label for="profile-upload" class="px-4 py-2.5 pr-7 pl-5 mt-2 2xl:mt-3 text-md 2xl:text-lg font-medium text-white rounded-lg shadow-sm cursor-pointer bg-primary hover:bg-secondary transition-all duration-300 flex items-center gap-2">
          <%= render "admin/shared/svg", name: 'plus' %>
          Choose File
        </label>
        <span id="file-name" class="mt-2 text-sm text-gray-500 2xl:mt-3 2xl:text-lg"></span>
      </div>
      <%= f.file_field :profile, class: "hidden", id: "profile-upload", data: { action: "change->profile-preview#previewImage", profile_preview_target: "input" } %>
    </div>
  </div>
  <div class="w-full">
    <%= f.label :description, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 4, class: "mt-1 2xl:mt-2 block 2xl:h-52 h-44 w-full px-4 py-2 2xl:px-8 2xl:py-4 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <div class="w-full">
    <%= f.label :first_name, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.text_field :first_name, class: "mt-1 2xl:mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <div class="w-full">
    <%= f.label :last_name, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.text_field :last_name, class: "mt-1 2xl:mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <div class="w-full">
    <%= f.label :phone_number, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.text_field :phone_number, class: "mt-1 2xl:mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <div class="w-full">
    <%= f.label :email, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.email_field :email, class: "mt-1 2xl:mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <div class="w-full">
    <%= f.label :address, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.text_field :address, class: "mt-1 2xl:mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
  <div class="w-full">
    <%= f.label :age, class: "block text-sm 2xl:text-lg font-medium text-gray-700" %>
    <%= f.text_field :age, class: "mt-1 2xl:mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary sm:text-sm 2xl:text-lg" %>
  </div>
</div>
