<div id=<%= "drawer-right-#{tooth_diagnosis.id}" %> class="fixed top-0 right-0 z-40 h-screen p-4 overflow-y-auto transition-transform translate-x-full bg-white rounded-l-lg shadow-lg w-80 dark:bg-gray-800" tabindex="-1" aria-labelledby="drawer-right-label">
  <div class="flex items-center justify-between w-full mb-4">
    <div class="flex items-center text-base font-semibold text-gray-500 dark:text-gray-400">
      <div class="flex items-center justify-center w-4 h-4 mr-2">
        <%= render partial: "admin/shared/teeth/tooth_#{tooth_diagnosis.tooth_number}" %>
      </div>
      Tooth #<%= tooth_diagnosis.tooth_number %>
    </div>
    <button type="button" data-drawer-hide="drawer-right-<%= tooth_diagnosis.id %>" aria-controls="drawer-right-<%= tooth_diagnosis.id %>" class="inline-flex items-center justify-center w-8 h-8 text-sm text-gray-400 bg-transparent rounded-lg hover:bg-gray-200 hover:text-gray-900 dark:hover:bg-gray-600 dark:hover:text-white" >
      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
      </svg>
      <span class="sr-only">Close menu</span>
    </button>
  </div>
</div>