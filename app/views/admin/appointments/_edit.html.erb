<div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-appointment-form-modal-target="container">
  <div class="fixed inset-0 transition-opacity bg-gray-500/75 " aria-hidden="true"></div>
  <div class="fixed inset-0 z-10 w-screen overflow-y-auto ">
    <div class="flex min-h-full p-4 text-center sm:items-center sm:p-0">
      <div class="w-64"></div>
      <div class="relative mx-auto overflow-hidden text-left transition-all transform bg-white rounded-lg shadow-xl sm:my-8 sm:w-full 2xl:max-w-4xl sm:max-w-3xl">
        <div class="px-4 pt-5 pb-4 bg-white sm:p-6 sm:pb-4">
          <div class="bg-white rounded ">
            <h6 class="text-lg font-semibold leading-8 text-center text-gray-900 2xl:text-xl">Edit Appointments</h6>
            <%= form_with model: appointment, url: { action: 'update' }, class: "space-y-4" do |f| %>
              <%= render partial: "form", locals:{f:f, appointment: appointment} %>
              <div>
              </div>
              <div class="px-4 py-3 rounded-sm 2xl:px-5 2xl:py-4 bg-gray-50 sm:flex sm:flex-row-reverse sm:px-6">
                <%= f.submit "Update Appointment", class: "inline-flex justify-center w-full px-3 py-2 2xl:text-lg text-sm font-semibold text-white rounded-md shadow-sm bg-primary hover:bg-primary sm:ml-3 sm:w-auto" %>
                <button
                    data-appointment-form-modal-target="closeButton"
                    data-action="click->appointment-form-modal#closeModal"
                  type="button" class="inline-flex justify-center w-full px-3 py-2 mt-3 text-sm font-semibold text-gray-900 bg-white rounded-md shadow-sm 2xl:text-lg ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">Cancel</button>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
