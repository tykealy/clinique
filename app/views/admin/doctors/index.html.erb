<%= render partial: "/admin/shared/sidebar" %>
<div class="sm:ml-64 mt-20">
  <header class="px-6 py-1">
    <ul class="flex items-center">
      <li class=" flex-1">
        <h6 class="text-xl leading-8 font-semibold text-gray-900">Doctors</h6>
      </li>
      <li>
        <a href="/admin/doctors/new">
          <button class="py-2.5 pr-7 pl-5 rounded-xl flex items-center gap-2 text-base font-semibold text-white transition-all duration-300 bg-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M10 5V15M15 10H5" stroke="white" stroke-width="1.6" stroke-linecap="round"></path>
            </svg>
            New Doctor
          </button>
        </a>
      </li>
    </ul>
  </header>
  <body>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">First Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone Number</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Address</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Age</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @doctors.each do |doctor| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= doctor.first_name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= doctor.last_name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= doctor.phone_number %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= doctor.email %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= doctor.address %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= doctor.age %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <a href="/admin/doctors/<%= doctor.id %>/edit" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                <a href="/admin/doctors/<%= doctor.id %>" data-confirm="Are you sure?" data-method="delete" rel="nofollow" class="text-red-600 hover:text-red-900 ml-4">Delete</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
</div>