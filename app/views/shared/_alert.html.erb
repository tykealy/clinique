<%# Alert component that appears at the bottom right of the screen %>
<div data-controller="alert" class="fixed z-50 max-w-sm p-4 text-white rounded-lg shadow-lg bottom-4 right-4 <%= flash[:danger] ? 'bg-red-500' : 'bg-primary' %> overflow-hidden">
  <div class="absolute bottom-0 left-0 right-0 h-1 bg-white/20">
    <div class="h-full bg-white/50 animate-progress"></div>
  </div>
  <div class="flex items-center justify-between">
    <span><%= message %></span>
    <button data-action="alert#dismiss" class="ml-4 text-white hover:text-gray-200 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
</div>
